<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	
	<modelVersion>4.0.0</modelVersion>
	
	<groupId>io.github.mikiya83</groupId>
	<artifactId>hbs_decipher_gui</artifactId>
	<version>1.5.1</version>
	<packaging>jar</packaging>
	
	<name>HBS Decipher tool GUI</name>
	<description>This is the GUI version of HBS decipher. It's a tool to decipher files ciphered with Hybrid Backup Sync with cloud providers.</description>
	<url>https://github.com/Mikiya83/hbs_decipher</url>
	
	<developers>
	    <developer>
	      <name>TRITZ Yoann</name>
	      <url>https://keybase.io/yoannttz</url>
	    </developer>
	</developers>
	
	<properties>
		<maven.compiler.source>1.8</maven.compiler.source>
		<maven.compiler.target>1.8</maven.compiler.target>
	</properties>

	<dependencies>
		<dependency>
			<groupId>io.github.mikiya83</groupId>
			<artifactId>hbs_decipher</artifactId>
			<version>1.5.1</version>
		</dependency>
	</dependencies>

	<build>
		<sourceDirectory>src</sourceDirectory>
		
		<plugins>
		
			<!-- Project assembly -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-assembly-plugin</artifactId>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>single</goal>
						</goals>
						<configuration>
							<archive>
								<manifest>
									<mainClass>
										qnapdecryptgui.QnapdecryptGui
									</mainClass>
								</manifest>
							</archive>
							<descriptorRefs>
								<descriptorRef>jar-with-dependencies</descriptorRef>
							</descriptorRefs>
							<appendAssemblyId>false</appendAssemblyId>
							<finalName>${project.artifactId}</finalName>
						</configuration>
					</execution>
				</executions>
			</plugin>
			
			<!-- Sign generation -->
			<plugin>
	        <groupId>org.apache.maven.plugins</groupId>
	        <artifactId>maven-gpg-plugin</artifactId>
	        <executions>
	          <execution>
	            <id>sign-artifacts</id>
	            <phase>verify</phase>
	            <goals>
	              <goal>sign</goal>
	            </goals>
	            <configuration>
	              <keyname>F4226E086A43130F1F4E48267FD4DFE98012D5CF</keyname>
	            </configuration>
	          </execution>
	        </executions>
	      </plugin>
		</plugins>
	</build>
</project>
